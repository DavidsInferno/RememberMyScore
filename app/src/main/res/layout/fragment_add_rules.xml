<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".MainActivity"
    android:clickable="true"
    android:focusable="true"

    android:animateLayoutChanges="true"

    android:paddingTop="16dp">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/l_titleText"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        app:helperText="*Required"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginHorizontal="16dp"
        app:errorEnabled="true"
        app:endIconMode="clear_text"
        app:hintTextColor="@color/Black"
        app:counterEnabled="true"
        app:counterMaxLength="20"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/titleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:inputType="text"
            android:hint="Title" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/l_pointsToWin"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        app:helperText="*Required"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/l_titleText"
        android:layout_marginHorizontal="16dp"
        app:endIconMode="clear_text"
        app:hintTextColor="@color/Black"



        app:errorEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editPointsToWin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="Points to win" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/l_extraField1"

        android:visibility="gone"


        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"

        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        app:endIconMode="clear_text"
        app:hintTextColor="@color/Black"

        app:errorEnabled="true"

        app:helperText="Tick if it is a winning condition"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/cBextraField1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/l_pointsToWin">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/extraField1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Extra number field"
            android:inputType="number" />

    </com.google.android.material.textfield.TextInputLayout>

    <CheckBox

        android:visibility="gone"

        android:id="@+id/cBextraField1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/l_extraField1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/l_extraField1" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/l_extraField2"

        android:visibility="gone"


        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"

        app:endIconMode="clear_text"
        app:hintTextColor="@color/Black"

        app:errorEnabled="true"

        app:helperText="Tick if it is a winning condition"

        app:layout_constraintEnd_toStartOf="@+id/cBextraField2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/l_extraField1">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/extraField2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Extra number field 2"
            android:inputType="number" />

    </com.google.android.material.textfield.TextInputLayout>

    <CheckBox
        android:visibility="gone"


        android:id="@+id/cBextraField2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/l_extraField2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/l_extraField2" />

    <Button
        android:id="@+id/addExtraField"

        style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:insetLeft="0dp"
        android:insetTop="0dp"
        android:insetRight="0dp"
        android:insetBottom="0dp"
        android:padding="0dp"
        app:icon="@drawable/ic_add_white"
        app:iconTint="@color/colorAccent"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:iconSize="24dp"

        app:strokeColor="@color/colorAccent"

        app:layout_constraintStart_toStartOf="@+id/l_numberInput"
        app:layout_constraintTop_toBottomOf="@+id/l_extraField2"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.Button.Circle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Add another field ( long press to remove )"
        app:layout_constraintBottom_toBottomOf="@+id/addExtraField"
        app:layout_constraintStart_toEndOf="@+id/addExtraField"
        app:layout_constraintTop_toTopOf="@+id/addExtraField" />

    <CheckBox
        android:id="@+id/diceRequirement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:text="Dice"
        app:layout_constraintStart_toStartOf="@+id/l_numberInput"
        app:layout_constraintTop_toBottomOf="@+id/addExtraField" />

    <CheckBox
        android:id="@+id/cbLowestScoreWins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"

        android:text="Lowest points win"
        app:layout_constraintBottom_toBottomOf="@+id/diceRequirement"
        app:layout_constraintEnd_toEndOf="@+id/buttonAdd"
        app:layout_constraintStart_toEndOf="@+id/diceRequirement"
        app:layout_constraintTop_toTopOf="@+id/diceRequirement" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/l_numberInput"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        app:errorEnabled="true"

        app:endIconMode="clear_text"
        app:hintTextColor="@color/Black"

        app:helperText="Swipe To Delete Entries"
        app:layout_constraintEnd_toStartOf="@+id/buttonAdd"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/diceRequirement">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/numberInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Buttons"
            android:imeOptions="actionSend"
            android:inputType="numberSigned"
            android:singleLine="true" />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/buttonAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"

        android:text="Add Button"
        android:textColor="@color/colorAccent"

        app:layout_constraintBottom_toBottomOf="@+id/l_numberInput"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/l_numberInput"
        app:layout_constraintTop_toTopOf="@+id/l_numberInput" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewButton"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="8dp"
        android:overScrollMode="never"
        android:padding="4dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toTopOf="@+id/btnSave"


        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/l_numberInput"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="Save"
        android:textColor="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>