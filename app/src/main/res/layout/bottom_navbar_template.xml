<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"

        android:layout_centerHorizontal="true"

        android:background="@drawable/bottom_shape_navigation"
        android:elevation="5dp"
        android:gravity="center"

        android:orientation="horizontal"
        android:padding="5dp">

        <ImageButton
            android:id="@+id/homeBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@android:color/white"
            android:padding="15dp"
            android:src="@drawable/ic_home_black" />

        <ImageButton
            android:id="@+id/gameBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@android:color/white"
            android:padding="15dp"
            android:src="@drawable/ic_controller_black" />

        <ImageButton
            android:id="@+id/rulesBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@android:color/white"
            android:padding="15dp"
            android:src="@drawable/ic_receipt_black" />

        <ImageButton
            android:id="@+id/scoresBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@android:color/white"
            android:padding="15dp"
            android:src="@drawable/ic_storage_black" />


    </LinearLayout>


</RelativeLayout>